<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:background="#0B0B0B"
    tools:context="com.example.hp.calculator.MainActivity"
    android:weightSum="120">


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
       android:layout_weight="20"
       android:gravity="center_horizontal"
       >

        <TextView
            android:id="@+id/tv"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#00E8E1E1"
            android:layout_span="4"
            android:hint="@string/tv"
            android:typeface="monospace"
            android:gravity="end"
            android:textColor="#D0CAD1"
            android:textSize="60dp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
      android:gravity="center_horizontal"
        android:layout_weight="20"
>


        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:gravity="center"
            android:shadowRadius="5"
            android:text="@string/zero"
            android:textColor="#C6FFFFFF"
            android:textSize="30sp" />

        <Button
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#C6FFFFFF"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:background="@drawable/buttondesign"
            android:shadowRadius="5"
            android:text="@string/clear"
            android:textSize="30sp" />





        <Button
            android:id="@+id/equal"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="#C6FFFFFF"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"

            android:text="@string/equal"
            android:background="@drawable/buttondesign"
            android:textSize="30sp" />

        <Button
            android:id="@+id/div"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/div"
            android:textSize="30sp" />

        />
    </TableRow>


    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="20"
        >

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#C6FFFFFF"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/one"
            android:textSize="30sp"
/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:textColor="#C6FFFFFF"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/two"
            android:textSize="30sp" />

        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#C6FFFFFF"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/three"
            android:textSize="30sp" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/add"
            android:textSize="30sp" />


    </TableRow>



    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="20"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#C6FFFFFF"
            android:gravity="center"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/four"
            android:textSize="30sp"
            android:layout_weight="0.03" />

        <Button
            android:id="@+id/five"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textColor="#C6FFFFFF"
            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/five"

            android:textSize="30sp" />

        <Button
            android:id="@+id/six"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

            android:gravity="center"
            android:textColor="#C6FFFFFF"

            android:background="@drawable/buttondesign"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="5"
            android:text="@string/six"
            android:textSize="30sp" />
        <Button
            android:id="@+id/sub"
            android:text="@string/sub"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:textSize="30sp"
            android:gravity="center"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"


            />


    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:gravity="center_horizontal"
   >

        <Button
            android:id="@+id/seven"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttondesign1"
            android:shadowColor="#A8A8A8"
            android:gravity="center"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/seven"
            android:textSize="30sp" />

        <Button
            android:id="@+id/eight"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:background="@drawable/buttondesign1"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/eight"

            android:textSize="30sp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttondesign1"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="5"
            android:gravity="center"
            android:text="@string/nine"
            android:textSize="30sp" />

        <Button
            android:id="@+id/mul"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/buttonshape"
            android:shadowColor="#A8A8A8"
            android:shadowDx="0"
            android:gravity="center"
            android:shadowDy="0"
            android:shadowRadius="5"
            android:text="@string/mul"
            android:textSize="30sp" />

    </TableRow>



</TableLayout>
